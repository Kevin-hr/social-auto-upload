{
  "$schema": "https://railway.app/schema.json",
  "name": "social-auto-upload",
  "description": "一键自动发布视频到多平台",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python sau_backend.py",
    "runAsRoot": true,
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  },
  "env": {
    "group": "production"
  }
}
